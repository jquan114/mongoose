            <% }else { %>
                <h4>
                    <%= product.qty%> left in stock
                </h4>
                <button type="button">BUY</button>
                <% } %>
                    <a href="/products"><button> BUY</button></a>
                    <form>
                        <input type="submit" value="Delete" />
